pipeline {
    agent none
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
		docker.build "docker.ask4ua.com/whir-app:latest"	
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'docker.ask4ua.com/whir-app'
                }
            }
            steps {
		sh 'python3 /app/whir/counter.py'
            }
        }
    }
}
